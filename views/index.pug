extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Let's build something amazing!

      p.lead.text-light
        | Don't let the internet be frustrating. Instead take a look at the work of I've done and let me help you tell your story online.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`/static/${project.image_urls[0]}`)
            h5 #{project.project_name}
      
